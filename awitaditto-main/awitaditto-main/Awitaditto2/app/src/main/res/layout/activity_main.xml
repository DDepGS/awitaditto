<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="999dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Título-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Registro"
                        android:textColor="#F38630"
                        android:textSize="7.5mm"
                        android:textStyle="1" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp" />

                <!-- Nombrelabel-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/NombreLabel"
                        android:layout_width="356dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nombre"
                        android:textColor="#F38630"
                        android:textSize="2mm"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <!-- NombreInput-->

                    <EditText

                        android:id="@+id/NombreInput"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Apellidos label -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="53dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/Apellidos"
                        android:layout_width="361dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Apellidos"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!--Apellidos input -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <EditText

                        android:id="@+id/ApellidosIn"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Apellidos"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- UsuarioLabel-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/UsuarioLabel"
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nombre de usuario"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!--Usuario input -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <EditText

                        android:id="@+id/UsuarioIn"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Nombre de usuario"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!--Correo label -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/CorreoLabel"
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Correo eléctronico"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- CorreoInput-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <EditText

                        android:id="@+id/CorreoIn"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Correo eléctronico"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
                <!-- Constraseña Label-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/ContraseñaLabel"
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contraseña"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
                <!-- Contraseña input-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <EditText

                        android:id="@+id/ContraseñaIn"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Contraseña"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!--Numtel label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/NumLabel"
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Número de teléfono"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Numtel Input-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" />

                    <EditText

                        android:id="@+id/NumIn"
                        android:layout_width="244dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bordesredonditos"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Número de teléfono"
                        android:inputType="textPersonName"
                        android:textColorHint="#046D67" />

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Paciente/Especialista lable-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/PELabel"
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Se usará la aplicación como:"
                        android:textColor="#F38630"
                        android:textSize="2mm" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- Paciente/Especialista input-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RadioGroup
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/PacienteIn"
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:colorAccent="#046D67"
                            android:minHeight="48dp"
                            android:text="Paciente"
                            android:textColor="#B3B3B3"
                            android:textSize="2.5mm" />

                        <RadioButton
                            android:id="@+id/EspecialistaIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:colorAccent="#046D67"
                            android:minHeight="48dp"
                            android:onClick="TipoUsuarioRegistro"
                            android:text="Especialista"
                            android:textColor="#B3B3B3"
                            android:textSize="2.5mm" />

                    </RadioGroup>

                    <android.widget.Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- NuevosPEInput-->

                <LinearLayout
                    android:id="@+id/PENuevoIn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                </LinearLayout>

                <!-- Botón registro-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal">

                    <android.widget.Space
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/botones"
                        android:text="Registrar"
                        android:textColor="#FFFFFF" />

                    <android.widget.Space
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>